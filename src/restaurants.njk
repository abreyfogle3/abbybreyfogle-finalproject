{% extends '_templates/base.njk' %}

{% block page_title %}Restaurants{% endblock %}

{% block page_description %}A list of Austin restaurants.{% endblock %}

{% block content %}
<article class="container">
  <h1>What to Eat:</h1>
  <p>Listed below our some of the best local resturants. Be sure to check them out!</p>

  <div class="row justify-content-center row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-1 g-4">
      {% for restaurant in resturants.restaurants %}
    <div class="col">
      <div class="card border-info md-3 h-100" style="max-width: 18rem;">
        <img src="img/restaurants/{{ restaurant.image }}" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"> {{ restaurant.name }} </h5>
          <h6 class="card-text"> {{ restaurant.address }} </h6>
          <p class="card-text"> {{ restaurant.category }} </p>
        </div>
      </div>
    </div>
      {% endfor %}
  </div>
  </article>

{% endblock %}